<Window x:Class="Ekzamen.Rpesentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekzamen.Rpesentation"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="450" Width="450" MaxHeight="450" MaxWidth="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="200">
            <TextBlock Text="Введите логин"/>
            <TextBox x:Name="TbLogin"/>
            <TextBlock Text="Введите пароль"/>
            <PasswordBox x:Name="PbPassword"/>
            <Button x:Name="BtnLogin" Content="Войти" Click="BtnLogin_Click" Margin="0 30 0 0"/>
        </StackPanel>
    </Grid>
</Window>
